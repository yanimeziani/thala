# ========================================
# Thala Backend Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=thala
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=thala
POSTGRES_PORT=5432

# Full database URL (used by the application)
DATABASE_URL=postgresql+asyncpg://thala:change_me_strong_password@localhost:5432/thala

# ========================================
# Authentication & Security
# ========================================
# JWT secret key - MUST be changed in production! Generate with: openssl rand -hex 32
JWT_SECRET=change_me_in_production_very_important_secret_at_least_32_chars

# JWT token expiration times (in minutes)
ACCESS_TOKEN_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_MINUTES=20160

# JWT algorithm
JWT_ALGORITHM=HS256

# Google OAuth Client ID (get from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com

# ========================================
# S3 Storage Configuration (Optional)
# ========================================
# For AWS S3
AWS_REGION=us-east-1
AWS_S3_BUCKET=thala-media
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# For S3-compatible storage (MinIO, DigitalOcean Spaces, etc.)
# S3_ENDPOINT_URL=https://your-minio-server.com
# Or for local MinIO: http://localhost:9000

# ========================================
# MeiliSearch Configuration (Optional)
# ========================================
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=your_meilisearch_master_key
MEILISEARCH_INDEX_PREFIX=thala

# MeiliSearch environment (development or production)
MEILI_ENV=production
MEILI_NO_ANALYTICS=true

# ========================================
# MinIO Configuration (Development Only)
# ========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ========================================
# Application Settings
# ========================================
APP_NAME=Thala Backend
API_V1_PREFIX=/api/v1
LOG_LEVEL=INFO
BACKEND_PORT=8000

# ========================================
# Nginx (Production)
# ========================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
